---
import Container from "./Container.astro";
import { Image } from "astro:assets";
import crossMark from "../assets/component/cross_mark.png";
import type { WindowType } from "../layouts/types";
interface Props {
  window: WindowType;
}

const { window } = Astro.props;
---

<div class="window">
  <Container width="100%" height="100%">
    <div class="title-bar" slot="title-bar">
      <div class="title-bar-left">
        <Image src={window.icon} alt="画像" width={36} />
        <span>{window.title}</span>
      </div>
      <div class="title-bar-right">
        <div>
          <div class="min-btn"></div>
        </div>
        <div>
          <div class="max-btn"></div>
        </div>
        <a href="/" class="close-btn">
          <Image src={crossMark} alt="バツ" width={22} />
        </a>
      </div>
    </div>
    <slot />
  </Container>
</div>
<style>
  span {
    color: white;
    font-weight: bold;
    font-size: 22px;
  }

  .window {
    margin: 20px 17.5px;
    height: calc(100% - 40px);
  }

  .title-bar {
    box-sizing: border-box;
    border-bottom: 5px solid #4c5b5c;
    background-color: #8c9991;
    height: 38px;
    padding: 0 12px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .title-bar-left {
    gap: 12px;
  }

  .title-bar-left,
  .title-bar-right {
    display: flex;
    align-items: center;
  }

  .title-bar-right > * {
    padding: 8px;
  }

  .min-btn {
    width: 20px;
    height: 3px;
    background-color: #4c5b5c;
  }

  .max-btn {
    width: 18px;
    height: 18px;
    border: 3px solid #4c5b5c;
  }
</style>
