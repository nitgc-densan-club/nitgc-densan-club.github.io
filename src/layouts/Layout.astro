---
import file from "../assets/component/file.png";
import mail from "../assets/component/mail.png";
import text from "../assets/component/text.png";
import Footer from "../components/Footer.astro";
import Window from "../components/Window.astro";

const pagePath = Astro.url.pathname;
let data;
if (pagePath.startsWith("/about/")) {
  data = { title: "電算部について", icon: text };
} else if (pagePath.startsWith("/news/")) {
  data = { title: "ニュース", icon: mail };
} else if (pagePath.startsWith("/magazines/")) {
  data = { title: "部誌", icon: text };
} else if (pagePath.startsWith("/blog/")) {
  data = { title: "ブログ", icon: file };
}

const title = data ? `${data.title}｜群馬高専電算部` : "群馬高専電算部";
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/icon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Font設定 -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DotGothic16&display=swap"
      rel="stylesheet"
    />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="og:title" content={title} />
    <meta name="og:description" content="群馬高専電算部の公式ホームページ" />
    <meta
      name="og:image"
      content="https://images.microcms-assets.io/assets/4b94e0cab2b34c6c9645e5fcd9929734/e79317aad8f24aaf95e43cfe0fda294d/icon-400x400.jpeg"
    />
  </head>
  <body>
    <main>
      {
        data ? (
          <Window window={data}>
            <slot />
          </Window>
        ) : (
          <slot />
        )
      }
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  @import "tailwindcss";
</style>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100svh;
  }

  html {
    font-family: "DotGothic16", sans-serif;
    font-weight: 400;
    font-style: normal;
    color: #333333;
  }

  body {
    display: flex;
    flex-direction: column;
  }

  main {
    flex-grow: 1;
    min-height: 0;
    background-color: #ccdab9;
  }
</style>
