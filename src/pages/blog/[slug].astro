import { getBlog, getBlogDetail } from "../../libs/microcms";

export async function  getStaticPaths (){
  const response = await getBlog();
  const contents = response.contents;
  return contents.map((content) => ({
    params: { slug: content.slug },
    props: {
      id: content.id
    },
  }));
  }

