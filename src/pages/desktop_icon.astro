---

import { Image } from 'astro:assets';
import TextFileImage from '../assets/top/text.png'

const { src=TextFileImage, title="", title_font_size="32px" } = Astro.props

---

<div class="desktop_icon">
  <div class="desktop_icon_img">
    <Image src={ src } alt="">
  </div>
  <p>{ title }</p>
</div>

<style define:vars={{ title_font_size }}>
  *{
    font-family: 'Jersey 10';
  }

  .desktop_icon{
    width: 96px;
    height: 96px;

    justify-content: center;
  }
  .desktop_icon_img{
    display: flex;

    width: 100%;
    height: 64px;
  
    justify-content: center;
  } 
  img{
    width: 64px;
    height: 64px;
  }
  p{
    margin: 0;

    font-style: normal;
    font-weight: 400;
    font-size: var(--title_font_size);
    line-height: 34px;
    text-align: center;
  }
</style>
